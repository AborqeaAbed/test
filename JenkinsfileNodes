pipeline {
    agent none

    stages {
        stage('Run Parallel Tests') {
            parallel {
                stage('Windows') {
                    agent {
                        label 'SlaveWindows'
                    }
                    steps {
                        script {
                            bat 'echo "Sleep 10 seconds on Windows Node"'
                            bat 'timeout /nobreak /t 10'
                        }
                    }
                }

                stage('Linux') {
                    agent {
                        label 'unix'
                    }
                    steps {
                        script {
                            sh 'echo "Sleep 10 seconds on Linux Node"'
                            sh 'sleep 10'
                        }
                    }
                }
            }
        }
    }
}
