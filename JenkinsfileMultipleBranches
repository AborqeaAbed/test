pipeline {
    agent any

    stages {
        stage('Build and Test') {
            steps {
                script {
                    def branchTasks = [
                        'main': {
                            echo 'Running tasks for the main branch'
                        },
                        'test': {
                            echo 'Running tasks for the develop branch'
                        }
                    ]
                    echo ${GIT_BRANCH}
                    def branchTask = branchTasks[env.BRANCH_NAME] ?: {
                        echo "Running default tasks for branch: ${env.BRANCH_NAME}"
                    }
                    branchTask.call()
                }
            }
        }
    }
}
