pipeline {
    agent any

    environment {
        DOCKER_IMAGE_NAME = 'abed-test'
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout the source code from the version control system
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build the Docker image
                    docker.build(env.DOCKER_IMAGE_NAME)
                }
            }
        }
    }

    post {
        success {
            // Push the Docker image to a registry (if needed)
            script {
                docker.withRegistry('https://your-docker-registry', 'docker-credentials-id') {
                    docker.image(env.DOCKER_IMAGE_NAME).push()
                }
            }
        }

        failure {
            echo 'The pipeline has failed!'
            // Add any cleanup or notifications here
        }
    }
}
